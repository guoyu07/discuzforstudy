<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/DiscuzActivityBox"
    android:layout_width="250.0dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="10.0dip"
    android:paddingLeft="10.0dip"
    android:paddingTop="10.0dip" >

    <LinearLayout
        android:id="@id/vcode_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10.0dip"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10.0dip"
            android:text="验证码"
            android:textColor="#ff333333"
            android:textSize="17.0dip"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible" >

            <RelativeLayout
                android:layout_width="100.0dip"
                android:layout_height="30.0dip" >

                <ImageView
                    android:id="@id/vcode_image"
                    android:layout_width="100.0dip"
                    android:layout_height="30.0dip"
                    android:background="#ffffffff"
                    android:clickable="true"
                    android:paddingBottom="1.0dip"
                    android:paddingTop="1.0dip"
                    android:visibility="visible" />

                <ProgressBar
                    android:id="@id/progressbar_vcode"
                    style="@android:style/Widget.ProgressBar.Large.Inverse"
                    android:layout_width="28.0dip"
                    android:layout_height="28.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <TextView
                android:id="@id/refreshvcode_tv"
                android:layout_width="wrap_content"
                android:layout_height="35.0dip"
                android:paddingLeft="4.0dip"
                android:text="(点击刷新)"
                android:textColor="#ff333333"
                android:textSize="16.0dip"
                android:visibility="visible" />
        </LinearLayout>

        <EditText
            android:id="@id/vcode_et"
            android:layout_width="200.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff333333"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/question_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10.0dip"
        android:visibility="gone" >

        <TextView
            android:id="@id/question_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题内容 "
            android:textColor="#ff333333"
            android:textSize="17.0dip"
            android:visibility="visible" />

        <EditText
            android:id="@id/question_et"
            android:layout_width="200.0dip"
            android:layout_height="50.0dip"
            android:layout_gravity="center_horizontal"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@id/submitvcode_btn"
        android:layout_width="85.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="提    交 "
        android:textSize="15.0dip"
        android:visibility="visible" />

</LinearLayout>