<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/recommend_listview_item_bg_selector"
    android:orientation="vertical" >

    <TextView
        android:id="@id/child_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="8.0dip"
        android:singleLine="true"
        android:textColor="@drawable/recommend_list_item_name_selector"
        android:textSize="16.0sp" />

    <TextView
        android:id="@id/child_item_information"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="2"
        android:paddingBottom="8.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:text=""
        android:textColor="@drawable/recommend_list_item_information_selector" />

    <View
        android:id="@id/line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/recommend_child_list_line" />

</LinearLayout>