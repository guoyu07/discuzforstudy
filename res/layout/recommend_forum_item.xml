<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@id/recommend_forum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="11.0dip"
        android:background="@drawable/recommend_forum_item_bg_selector"
        android:paddingLeft="23.0dip"
        android:paddingRight="40.0dip"
        android:visibility="gone" >

        <TextView
            android:id="@id/siteview_forumindex_forumname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textColor="#ff545454"
            android:textSize="18.0dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/recommend_thread"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="11.0dip"
        android:background="@drawable/thread_item_bg_selector"
        android:paddingLeft="14.0dip"
        android:paddingRight="14.0dip"
        android:paddingTop="11.0dip" >

        <TextView
            android:id="@id/tab_index_mythread_list_subject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff545454"
            android:textSize="17.0sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab_index_mythread_list_subject"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="11.0dip"
            android:paddingTop="4.0dip" >

            <TextView
                android:id="@id/tab_index_mythread_list_lastposter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffb8b8b8"
                android:textSize="11.0sp" />

            <TextView
                android:id="@id/tab_index_mythread_list_lastpost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.0dip"
                android:layout_toRightOf="@id/tab_index_mythread_list_lastposter"
                android:textColor="#ffb8b8b8"
                android:textSize="11.0sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4.0dip"
                android:layout_toLeftOf="@id/tab_index_mythread_list_replies"
                android:src="@drawable/replies_icon" />

            <TextView
                android:id="@id/tab_index_mythread_list_replies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:textColor="#ffb8b8b8"
                android:textSize="11.0sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@id/threadlist_have_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/recommend_thread"
        android:layout_alignTop="@id/recommend_thread"
        android:src="@drawable/image_icon"
        android:visibility="gone" />

</RelativeLayout>