<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/DiscuzActivityBox"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg_repeat"
    android:orientation="vertical" >

    <net.discuz.source.widget.SiteNavbar
        android:id="@id/site_navbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@id/noticlist_count_layout"
            android:layout_width="fill_parent"
            android:layout_height="34.0dip"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="8.0dip"
            android:background="@drawable/linearlayout_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4.0dip"
            android:visibility="gone" >

            <TextView
                android:id="@id/newnotice"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="3.0dip"
                android:gravity="center"
                android:text="条新消息"
                android:textColor="#ff956146"
                android:textSize="18.0dip" />
        </LinearLayout>

        <GridView
            android:id="@id/notice_listView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:dividerHeight="0.0px"
            android:horizontalSpacing="4.0dip"
            android:listSelector="@drawable/alpha_bg"
            android:numColumns="2"
            android:scrollbars="none" />
    </LinearLayout>

</LinearLayout>